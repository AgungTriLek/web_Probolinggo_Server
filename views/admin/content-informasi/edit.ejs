<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>DataTables</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/content-informasi">content informasi</a></li>
              <li class="breadcrumb-item active">edit</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          
              <!-- /.card-header -->                
                <div class="col-12">
                  <!-- general form elements -->
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title">Edit Content</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="/content-informasi/edit/<%= content._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="exampleInputTitle1">Title</label>
                          <input type="text" value="<%= content.title %>" name="title" class="form-control" id="exampleInputTitle1" placeholder="Enter Title">
                        </div>
                        <div class="form-group">
                          <label for="category">kategori</label>
                          <select class="form-control select2" name="category" id="category">
                          <option selected="selected">Pilih kategori</option>
                          <% category.forEach(category => { %>
                            <option value="<%= category.id %>"
                              <% if(category._id.toString() === content?.category?._id.toString()) {%>
                                selected
                                <% } %>
                              >
                              <%= category.name %></option>
                          <% }) %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label for="exampleInputDate1">Date</label>
                          <input type="date"  name="date" class="form-control" id="exampleInputDate1" placeholder="Date">
                        </div>
                        <div class="form-group">
                          <label for="file">File input</label>
                          <div class="input-group">
                            <div class="custom-file">
                              <input type="file"  name="file" class="custom-file-input" id="file">
                              <label class="custom-file-label" for="file"></label>
                            </div>
                          </div>
                          <br>
                          <img width="35%" height="35%" src="http://localhost:3000/uploads/<%= content.file %>" alt="tes" id="preview">
                        </div>
                        
                        <div class="form-group">
                          <textarea id="summernote"  name="texts">
                            <%= content.texts %>
                          </textarea>
                        </div>
                      </div>
                      <!-- /.card-body -->
      
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </form>
                  </div>
                  <!-- /.card -->
      
                  <!-- general form elements -->
                  
      
                  
                  <!-- /.card -->
                  
      
                </div>
              
              <!-- /.card-body -->
            
          
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>

<script>
  function readURL(input) {
    console.log(input.files, 'ini input files')
    if(input.files){
      const reader = new FileReader();

      reader.onload = function(e) {
        $('#preview').attr('src', e.target.result)
        
      }
      reader.readAsDataURL(input.files[0])
    }
  }

  $('#file').change(function() {
    readURL(this)
  })
</script>

