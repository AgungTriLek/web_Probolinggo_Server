                ubah
              </a>
              <form style="display: inline-block ;" action="/category-informasi/delete/<%= category[i]._id %>?_method=delete" method="POST">
                <button class="btn btn-danger">
                  <i class="fas fa-trash"></i>
                  hapus
                </button>
              </form>
            </td>
          </tr>
        <%} %>
      </tbody>
   
    
