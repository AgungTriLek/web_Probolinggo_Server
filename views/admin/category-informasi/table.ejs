      <thead class="">
      <tr>
        <th >No.</th>
        <th >nama</th>
        <th >aksi</th>
      </tr>
      </thead>
      <tbody >
        <% for(let i = 0; i < category.length; i++){ %>
          <tr>
            <td><%= i + 1 %></td>
            <td>
              <div>
                <%= category[i].name %>
              </div>
            </td>

            <td  >
              
              <a href="/category-informasi/edit/<%= category[i]._id %>" class="btn btn-warning">
